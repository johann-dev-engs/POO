package aula06;

public class Forma {
    private String cor;
    private int preenchida;

    public void mostrarPreenchida(){
        if (preenchida == 1) {
            System.out.println("A forma está preenchida!");
        } else {
            System.out.println("A forma não está preenchida!");
        }
    }

    public Forma(String cor, int preenchida){
        this.cor =cor;
        this.preenchida = preenchida;
    }
    public String getCor() {
        return cor;
    }
    public void setCor(String cor){
        this.cor = cor;
    }
    public int getPreenchida(int preenchida){
        return preenchida;
    }
    public void setPreenchida(int preenchida){
        this.preenchida = preenchida;
    }
}
class Retangulo extends Forma{
    double largura;
    double altura;

    public Retangulo(String cor, int preenchida, double largura, double altura){
        super(cor, preenchida);
        this.largura = largura;
        this.altura = altura;
    }
    public double getLargura(){
        return largura;
    }
    public void setLargura(double largura){
        this.largura = largura;
    }
    public double getAltura(){
        return altura;
    }
    public void setAltura(double altura){
        this.altura = altura;
    }
    public double calcularArea(){
        return largura * altura;
    }
}
class Circulo extends Forma{
    double raio;

    public Circulo(String cor, int preenchida, double raio){
        super(cor, preenchida);
        this.raio = raio;
    }
    public double getRaio(){
        return raio;
    }
    public void setRaio(double raio){
        this.raio = raio;
    }
    public double calcularArea(){
        return Math.PI * raio * raio;
    }
}
class TesteForma{
    public static void main(String[]args){
        Retangulo r = new Retangulo ("Vermelho", 1,6,8);
        Circulo c = new Circulo("Azul",1,8);

        System.out.println("A área do ratângulo é: " +r.calcularArea());
        System.out.println("A área do círculo é: " +c.calcularArea());
    }
}
