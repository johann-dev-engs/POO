package atividade02;

class Calculadora {

  
    public int soma(int a, int b) {
        return a + b;
    }

    public double soma(double a, double b) {
        return a + b;
    }


    public int soma(int a, int b, int c) {
        return a + b + c;
    }
}

public class TesteCalculadora {
    public static void main(String[] args){
        Calculadora calc = new Calculadora();

        int resultadoInt = calc.soma(5, 10);
        System.out.println("Soma de inteiros: " + calc.soma(resultadoInt, resultadoInt));

        double resultadoDouble = calc.soma(5.5, 10.2);
        System.out.println("Soma de doubles: " + calc.soma(resultadoInt, resultadoDouble));

        int resultadoTriple = calc.soma(1, 2, 3);
        System.out.println("Soma de trÃªs inteiros: " + calc.soma(resultadoTriple, resultadoDouble));
    }
}
